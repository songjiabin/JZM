<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/article_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_40"
            android:paddingRight="@dimen/dp_40"
            android:text="简介"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/article_intro_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_intro"
            android:layout_marginTop="@dimen/dp_10"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="@dimen/dp_40"
            android:paddingRight="@dimen/dp_40"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/article_related"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_intro_content"
            android:layout_marginTop="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_40"
            android:paddingRight="@dimen/dp_40"
            android:text="相关作品"
            android:textColor="@color/colorAccent"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/article_related_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_related"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/article_related_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_related"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_40"
            android:text="没有相关作品"
            android:textColor="@color/orange_light"
            android:textSize="18sp"
            android:visibility="gone"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>