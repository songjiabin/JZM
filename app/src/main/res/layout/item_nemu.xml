<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/sp_16"
                android:layout_marginRight="@dimen/sp_16"
                android:layout_marginTop="8dp"
                android:background="@drawable/hotpage_sentences_bg"
                android:clickable="true"
                android:focusable="true">

    <ImageView
        android:id="@+id/category_item_img"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:background="@android:color/black"/>

    <TextView
        android:id="@+id/category_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/category_item_img"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:lines="1"
        android:text="标题"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/category_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_item_title"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/category_item_img"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:lines="1"
        android:text="作者"
        android:textColor="@color/yellow_dark"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/category_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_item_author"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/category_item_img"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:lines="4"
        android:padding="@dimen/dp_4"
        android:textSize="12sp"/>

</RelativeLayout>